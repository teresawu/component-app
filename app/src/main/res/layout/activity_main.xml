<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.com.componentapp.ui.MainActivity">

    <Button
        android:id="@+id/viewModelBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Model"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/liveDataBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Live Data"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/viewModelBtn"
        app:layout_constraintTop_toBottomOf="@+id/viewModelBtn"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/roomBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Room"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/liveDataBtn"
        app:layout_constraintTop_toBottomOf="@+id/liveDataBtn"
        app:layout_constraintVertical_bias="0.45" />

</android.support.constraint.ConstraintLayout>
