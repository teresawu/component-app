<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.MainActivity">

    <Button
        android:id="@+id/viewModelBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="View Model"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/liveDataBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Live Data"
        app:layout_constraintStart_toEndOf="@id/viewModelBtn"
        app:layout_constraintStart_toStartOf="@id/viewModelBtn"
        app:layout_constraintTop_toBottomOf="@id/viewModelBtn"
        app:layout_constraintTop_toTopOf="@id/viewModelBtn" />

    <Button
        android:id="@+id/roomBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Room"
        app:layout_constraintStart_toEndOf="@id/liveDataBtn"
        app:layout_constraintStart_toStartOf="@id/liveDataBtn"
        app:layout_constraintTop_toBottomOf="@id/liveDataBtn"
        app:layout_constraintTop_toTopOf="@id/liveDataBtn" />

</android.support.constraint.ConstraintLayout>
